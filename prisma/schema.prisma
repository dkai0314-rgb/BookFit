// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model MonthlyBestseller {
  id            Int      @id @default(autoincrement())
  snapshotMonth String   // YYYY-MM format
  rank          Int
  isbn13        String
  title         String
  author        String
  publisher     String
  coverUrl      String
  categoryName  String?
  description   String?
  link          String?
  source        String   @default("aladin")
  createdAt     DateTime @default(now())

  @@unique([snapshotMonth, isbn13])
  @@index([snapshotMonth, rank])
}

model Book {
  id          String   @id @default(uuid())
  title       String
  author      String
  category    String
  description String
  summary     String?  // LLM summary
  recommendation String? // AI Recommendation Reason
  imageUrl    String?  // Cover image URL
  purchaseLink String?
  isChoice    Boolean  @default(false) // curated for "BookFit Choice"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
